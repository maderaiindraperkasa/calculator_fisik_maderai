<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                tools:context=".MainActivity">

    <TextView
            android:id="@+id/layar"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="right|center_vertical"
            android:maxLength="16"
            android:padding="10dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="30sp"
            android:typeface="serif"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/layar"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
            <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="30sp"
                    android:id="@+id/b7"
                    android:text="7" android:background="@color/colorPrimaryDark" android:textColor="@color/putih"
                    android:textStyle="bold"/>
            <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="30sp"
                    android:id="@+id/b8"
                    android:text="8" android:background="@color/colorPrimary" android:textColor="@color/putih"
                    android:textStyle="bold"/>
            <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="30sp"
                    android:id="@+id/b9"
                    android:text="9" android:background="@color/colorPrimaryDark" android:textColor="@color/putih"
                    android:textStyle="bold"/>
            <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="30sp"
                    android:id="@+id/bagi"
                    android:text="/" android:background="@color/colorPrimary" android:textColor="@color/putih"
                    android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
            <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="30sp"
                    android:id="@+id/b4"
                    android:text="4" android:background="@color/colorPrimary" android:textColor="@color/putih"
                    android:textStyle="bold"/>
            <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="30sp"
                    android:id="@+id/b5"
                    android:text="5" android:background="@color/colorPrimaryDark" android:textColor="@color/putih"
                    android:textStyle="bold"/>
            <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="30sp"
                    android:id="@+id/b6"
                    android:text="6" android:background="@color/colorPrimary" android:textColor="@color/putih"
                    android:textStyle="bold"/>
            <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="30sp"
                    android:id="@+id/kali"
                    android:text="*" android:background="@color/colorPrimaryDark" android:textColor="@color/putih"
                    android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
            <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="30sp"
                    android:id="@+id/b1"
                    android:text="1" android:background="@color/colorPrimaryDark" android:textColor="@color/putih"
                    android:textStyle="bold"/>
            <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="30sp"
                    android:id="@+id/b2"
                    android:text="2" android:background="@color/colorPrimary" android:textColor="@color/putih"
                    android:textStyle="bold"/>
            <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="30sp"
                    android:id="@+id/b3"
                    android:text="3" android:background="@color/colorPrimaryDark" android:textColor="@color/putih"
                    android:textStyle="bold"/>
            <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="30sp"
                    android:id="@+id/kurang"
                    android:text="-" android:background="@color/colorPrimary" android:textColor="@color/putih"
                    android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
            <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="30sp"
                    android:id="@+id/titik"
                    android:text="." android:background="@color/colorPrimary" android:textColor="@color/putih"
                    android:textStyle="bold"/>
            <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="30sp"
                    android:id="@+id/b0"
                    android:text="0" android:background="@color/colorPrimaryDark" android:textColor="@color/putih"
                    android:textStyle="bold"/>
            <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="30sp"
                    android:id="@+id/hapus"
                    android:text="CE" android:background="@color/colorPrimary" android:textColor="@color/putih"
                    android:textStyle="bold"/>
            <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="30sp"
                    android:id="@+id/tambah"
                    android:text="+" android:background="@color/colorPrimaryDark" android:textColor="@color/putih"
                    android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
            <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="30sp"
                    android:id="@+id/samadengan"
                    android:text="=" android:background="@color/colorPrimaryDark" android:textColor="@color/putih"
                    android:textStyle="bold"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>